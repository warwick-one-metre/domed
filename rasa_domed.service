[Unit]
Description=Daemon for exposing the dome controller via Pyro.
After=syslog.target
Wants=network-online.target
After=network-online.target

[Service]
Restart=on-failure
Type=simple
ExecStart=/usr/bin/env python3.4 -u /usr/bin/domed rasa
ExecStartPost=/usr/bin/env python3.4 -u /usr/bin/obslog info rasa_domed Started by systemd
ExecStopPost=/usr/bin/env python3.4 -u /usr/bin/obslog info rasa_domed Stopped by systemd
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
