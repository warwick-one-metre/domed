_dome()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="status open close stop heartbeat siren engineering"

    case "${prev}" in
        open)
            opts="east west both"
            ;;
        close)
            opts="east west both"
            ;;
        heartbeat)
            opts="disable enable"
            ;;
        siren)
            opts="disable enable"
            ;;
        engineering)
            opts="disable enable"
            ;;
        *)
            ;;
    esac

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -F _dome dome
